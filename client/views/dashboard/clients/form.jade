form.form-horizontal(name="clientForm")
    .form-group(ng-class="{ 'has-error': clientForm.firstName.$error.required }")
        label.col-md-3.control-label(for="firstName") First name*
        .col-md-9
            input.form-control(name="firstName" ng-model="client.firstName" ng-blur="updateKnownAs()" 
                               ng-required="true" placeholder="First name" ng-disabled="isSaving" autofocus)
    .form-group
        label.col-md-3.control-label(for="lastName") Last name
        .col-md-9
            input.form-control(name="lastName" ng-model="client.lastName" placeholder="Last name" ng-disabled="isSaving")
    .form-group
        label.col-md-3.control-label(for="knownAs") Known as
        .col-md-9
            input.form-control(name="knownAs" ng-model="client.knownAs" placeholder="Known as" ng-disabled="isSaving")
    .form-group
        label.col-md-3.control-label(for="ndob") Date of birth
        .col-md-9
            .input-group
                input.form-control(name="startDate" type="text" datepicker-popup="dd/MM/yyyy" ng-model="client.dob" ng-disabled="isSaving"
                                   is-open="opened" datepicker-options="dateOptions" close-text="Close" placeholder="Date of birth")
                span.input-group-btn
                    button.btn.btn-default(type="button" ng-click="open($event)" ng-disabled="isSaving")
                        i.glyphicon.glyphicon-calendar
    .form-group
        label.col-md-3.control-label(for="nemail") Email
        .col-md-9
            input.form-control(name="nemail" type="email" ng-model="client.email" placeholder="Email address" ng-disabled="isSaving")
    .form-group
        label.col-md-3.control-label(for="mobilePhone") Phone
        .col-md-9
            input.form-control(name="mobilePhone" ng-model="client.mobile" placeholder="Mobile preferred" ng-disabled="isSaving")
    .form-group(ng-show="client._id")
        label.col-md-3.control-label(for="otherPhone") Other phone
        .col-md-9
            input.form-control(name="otherPhone" ng-model="client.phone" placeholder="Other phone" ng-disabled="isSaving")
    .form-group(ng-show="client._id")
        label.col-md-3.control-label(for="naddress") Address
        .col-md-9
            // fake fields are a workaround for chrome autofill getting the wrong fields
            input(style="display:none" name="naddress" type="text")
            input.form-control(name="naddress" type="text" ng-autocomplete ng-model="client.address" placeholder="Address" ng-disabled="isSaving")
    .form-group(ng-show="client._id")
        label.col-md-3.control-label(for="occupation") Occupation
        .col-md-9
            input.form-control(name="occupation" ng-model="client.occupation" placeholder="Occupation" ng-disabled="isSaving")
    .form-group(ng-show="client._id")
        label.col-md-3.control-label(for="hobbies") Hobbies
        .col-md-9
            input.form-control(name="hobbies" ng-model="client.hobbies" placeholder="Hobbies" ng-disabled="isSaving")
    .form-group(ng-show="client._id")
        label.col-md-3.control-label(for="status") Status
        .col-md-9
            select.form-control(name="status" ng-model="client.status" ng-disabled="isSaving")
                option(value="active") Active
                option(value="inactive") InActive
