div(ng-include="'views/dashboard/shell.html'")
h1 Edit {{template.templateType}} Template: {{ template.description }}
div(ng-include="'views/dashboard/communication/navbar-communication.html'")
.container
    .row
        .col-md-6
            h4 Template
            .row
                .col-sm-2.col-xs-6.voffset1 Type
                //.col-sm-4
                    ui-select(ng-model="template.templateType")
                        ui-select-match(placeholder="Select template type...") {{$select.selected.name}}
                        ui-select-choices(repeat="tt.name as tt in templateTypes | filter: $select.search")
                            span(ng-bind-html="trustAsHtml(tt.name)")
                            span {{templateType.name}}
                                p testing
                .col-sm-4.col-xs-6
                    select.form-control(ng-model="template.templateType")
                        option SMS
                        option Email

            .row.voffset2
                .col-xs-12
                    h4 Subject
            .row
                .col-xs-12
                    textarea.form-control(msd-elastic="\n" smart-area="areaConfig" ng-model="template.subject" rows=1)
            .row.voffset2
                .col-xs-12
                    h4 Message
            .row
                .col-xs-12
                    textarea.form-control(msd-elastic="\n" smart-area="areaConfig" ng-model="template.body")
                        
        .col-md-6
            h4 Preview
            .container
                .row
                    .col-sm-3
                        input.form-control(placeholder="set client for preview")
            .row.voffset2
                .col-xs-12
                    h4 Subject
            .row
                .col-xs-12
                    .well
                        p {{template.subject}}
            .row.voffset2
                .col-xs-12
                    h4 Message
            .row
                .col-xs-12
                    .well
                        p {{template.body}}

    .row.pull-right
        a.btn.btn-success Send test
        | &nbsp;
        a.btn.btn-default(href="/communication/settings/templates") Cancel
        | &nbsp;
        a.btn.btn-primary Save
