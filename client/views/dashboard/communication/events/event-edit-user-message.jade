div(ng-include="'views/dashboard/shell.html'")
h1 Internal message to {{event.to.name}}
div(ng-include="'views/dashboard/communication/navbar-communication.html'")
.container
    .row
        .col-xs-12
            p.text-muted From:&nbsp;
                span.text-default {{ event.createdByName }}
    .row.form-horizontal
        .col-sm-6
            .form-group
                label.col-sm-4.control-label(for="resourceSelector") To
                .col-sm-8
                    user-multi-selector(ng-model="event.relatedSps" placeholder="team member(s) to message")
        .col-sm-6
            .form-group
                label.col-sm-4.control-label(for="resourceSelector") About
                .col-sm-8
                    client-multi-selector(ng-model="event.relatedClients" placeholder="client(s) related to message")
    hr
    .row.form-horizontal
        .form-group
            label.col-sm-2.control-label Message
            .col-sm-10
                textarea.form-control(msd-elastic="\n" ng-model="event.note" placeholder="message")
        a(href="#" ng-click="hideOtherDetails = !hideOtherDetails")
            span(ng-hide="hideOtherDetails") Edit summary...
            span(ng-show="hideOtherDetails") Hide summary...
        .form-group(ng-show="hideOtherDetails")
            label.col-sm-2.control-label Summary
            .col-sm-10
                input.form-control(ng-model="event.eventSummary" placeholder="message summary")

    .row.pull-right
        .col-xs-12
            a.btn.btn-default Cancel
            | &nbsp;
            a.btn.btn-primary Save
