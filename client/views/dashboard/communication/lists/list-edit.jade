div(ng-include="'views/dashboard/shell.html'")
h1 List edit: {{ list.name }}
div(ng-include="'views/dashboard/communication/navbar-communication.html'")

.container
    h4 Description
    .row
        .form-horizontal
            .col-xs-12
                .form-group
                    label.control-label.col-sm-2 Name:
                    .col-sm-4
                        input.form-control(ng-model="list.name")
                .form-group
                    label.control-label.col-sm-2 Description:
                    .col-sm-4
                        input.form-control(ng-model="list.description")

    hr

    h4 Filters
    .row
    .row.form-horizontal
        .col-sm-6
            .form-group
                .col-sm-5.col-sm-offset-3
                    input.form-control(placeholder="copy from another list")
            .form-group
                label.control-label.col-sm-3 Resources:
                .col-sm-9
                    resource-multi-selector(ng-model="appointment.resources" placeholder="Service provider, room etc")
            .form-group
                label.control-label.col-sm-3 Age from:
                .col-sm-9
                    input.form-control(placeholder="blank for any" type="number" min="0" max="140" ng-model="list.ageFrom")
            .form-group
                label.control-label.col-sm-3 Age to:
                .col-sm-9
                    input.form-control(placeholder="blank for any" type="number" min="0" max="140" ng-model="list.ageTo")
            .form-group
                label.control-label.col-sm-3 Number of visits from:
                .col.col-sm-9
                    input.form-control(placeholder="blank for any" type="number" min="0" max="10000" ng-model="list.visitCountFrom")
            .form-group
                label.control-label.col-sm-3 Number of visits to:
                .col.col-sm-9
                    input.form-control(placeholder="blank for any" type="number" min="0" max="10000" ng-model="list.visitCountTo")
            .form-group
                label.control-label.col-sm-3 Last fulfilled appointment from:
                .col.col-sm-9
                    input.form-control(placeholder="blank for any" type="date" ng-model="list.lastAppointmentFrom")
            .form-group
                label.control-label.col-sm-3 Last fulfilled appointment to:
                .col.col-sm-9
                    input.form-control(placeholder="blank for any" type="date" ng-model="list.lastAppointmentTo")
            .form-group
                label.control-label.col-sm-3 Pending appointment from:
                .col.col-sm-9
                    input.form-control(placeholder="blank for any" type="date" ng-model="list.pendingAppointmentFrom")
            .form-group
                label.control-label.col-sm-3 Pending appointment to:
                .col.col-sm-9
                    input.form-control(placeholder="blank for any" type="date" ng-model="list.pendingAppointmentTo")

        .col-sm-6
            .form-group
                label.control-label.col-sm-3 Status:
                .col.col-sm-4
                    select.form-control(ng-model="list.status")
                        option any
                        option active
                        option inactive  
            .form-group
                .col-sm-offset-3.col-sm-9
                    .checkbox
                        label
                            input(type="checkbox" ng-model="list.validEmail")
                            | Must have valid email
            .form-group(ng-show="list.validEmail===true")
                .col-sm-offset-3.col-sm-9
                    .checkbox
                        label
                            input(type="checkbox" ng-model="list.onePerEmail")
                            | Email unique

            .form-group
                .col-sm-offset-3.col-sm-9
                    .checkbox
                        label
                            input(type="checkbox" ng-model="list.validMobile")
                            | Must have valid mobile number
            .form-group(ng-show="list.validMobile===true")
                .col-sm-offset-3.col-sm-9
                    .checkbox
                        label
                            input(type="checkbox" ng-model="list.onePerMobile")
                            | Mobile number unique



    .row
        .col-xs-12
            .pull-right
                a.btn.btn-default(href="communication/lists/{{list.id}}") Cancel
                | &nbsp;
                a.btn.btn-primary(href="communication/lists/{{list.id}}") Save

