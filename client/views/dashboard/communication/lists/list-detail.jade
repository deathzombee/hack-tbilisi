div(ng-include="'views/dashboard/shell.html'")
h1 List details: {{ list.name }}
div(ng-include="'views/dashboard/communication/navbar-communication.html'")

.container
    h4 Description
    p.text-default {{ list.description }}
    p.text-muted Created: 
        span.text-default {{ list.created | date:'d MMM y h:mm a' }}
    p.text-muted Last used: 
        span.text-default {{ list.lastUsed | date:'d MMM y h:mm a' }}
    hr

    h4 Filters
    .row
        .col-sm-6
            .row
                .col-sm-3
                    p.text-muted Resources:
                .col-sm-7
                    resource-multi-selector(ng-disabled="true" ng-model="appointment.resources" placeholder="Practitioner, room etc")
            .row
                .col-sm-12
                    p.text-muted Age range: 
                        span.text-default {{ list.ageFrom }} to {{ list.ageTo }}
            .row
                .col-sm-12
                    p.text-muted Number of visits: 
                        span.text-default {{ list.visitCountFrom }} to {{ list.visitCountTo }}
            .row
                .col-sm-12
                    p.text-muted Last fulfilled appointment: 
                        span.text-default(ng-show="list.lastAppointment === 'custom'") {{ list.lastAppointmentFrom }} to {{ list.lastAppointmentTo }}
                        span.text-default(ng-show="list.lastAppointment !== 'custom'") {{ list.lastAppointment }}
            .row
                .col-sm-12
                    p.text-muted Pending appointment: 
                        span.text-default(ng-show="list.pendingAppointment === 'custom'") {{ list.pendingAppointmentFrom }} to {{ list.pendingAppointmentTo }}
                        span.text-default(ng-show="list.pendingAppointment !== 'custom'") {{ list.pendingAppointment }}
        .col-sm-6
            .row
                .col-sm-12
                    p.text-muted Status: 
                        span.text-default {{ list.status }}
            .row
                .col-sm-12
                    p.text-muted Valid email: &nbsp;
                        span.glyphicon.glyphicon-ok-circle.text-success(ng-show="list.validEmail === true")
                        span.glyphicon.glyphicon-remove-circle.text-danger(ng-show="list.validEmail === false")
                        span.text-default(ng-show="list.validEmail==='any'") Any
            .row(ng-show="list.validEmail === true")
                .col-sm-12
                    p.text-muted One per email address: &nbsp;
                        span.glyphicon.glyphicon-ok-circle.text-success(ng-show="list.onePerEmail === true")
                        span.glyphicon.glyphicon-remove-circle.text-danger(ng-show="list.onePerEmail === false")
            .row
                .col-sm-12
                    p.text-muted Valid mobile: &nbsp;
                        span.glyphicon.glyphicon-ok-circle.text-success(ng-show="list.validMobile === true")
                        span.glyphicon.glyphicon-remove-circle.text-danger(ng-show="list.validMobile === false")
                        span.text-default(ng-show="list.validMobile==='any'") Any
            .row(ng-show="list.validMobile === true")
                .col-sm-12
                    p.text-muted One per mobile number: &nbsp;
                        span.glyphicon.glyphicon-ok-circle.text-success(ng-show="list.onePerMobile === true")
                        span.glyphicon.glyphicon-remove-circle.text-danger(ng-show="list.onePerMobile === false")

    .row
        .col-xs-12
            .pull-right
                a.btn.btn-default(href="communication/message?listId={{list.id}}") Message this list
                | &nbsp;
                a.btn.btn-primary(href="communication/lists/{{list.id}}/edit") Edit

    hr
    h4 Clients in list
    p.text-muted Number of clients:
        span.text-default {{ clients.length }}
    //- .row(ng-repeat="client in clients")
    a.text-default(ng-repeat="client in clients" href="clients/{{client.id}}") {{ client.name }}
