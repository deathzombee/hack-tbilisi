div(ng-include="'views/dashboard/settings/shell.html'")

.container
    .row
        .col-md-offset-3.col-md-6
            h2 Create New User
    .row
        .col-md-offset-3.col-md-6
            include ./form.jade
    .row
        .col-md-9
            .pull-right
                a.btn.btn-default(href="/settings/users") Cancel
                | &nbsp;
                button.btn.btn-primary(ng-click="createUser()", ng-disabled="userForm.$invalid || !user.roles.length || isSaving") Create
