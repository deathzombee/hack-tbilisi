div(ng-include="'views/dashboard/settings/shell.html'")

div(ng-include="'views/common/spinner.html'" ng-show="isLoading")
.container(ng-hide="isLoading")
    .row
        .col-md-12
            h2 {{ site.name }}
    .row
        .col-md-2
            div(ng-show="site.pic")
                img.img-thumbnail.img-responsive(profile-img="site" profile-type="site" profile-size="large")
        .col-md-10
            p.text-muted Created:
                span.text-default {{ site.created | date:'fullDate' }}
            p.text-muted Address:
                span.text-default {{ site.address }}
            p.text-muted Phone:
                span.text-default {{ site.phone }}
            p.text-muted Email:
                a.text-default(href="mailto:{{ site.email }}") {{ site.email }}
            p.text-muted Team members:
                span.text-default(ng-repeat="user in site.users")
                    a(href="/settings/users/{{ user._id }}") {{ user.name }},
    .row
        .col-md-12
            .pull-right
                a.btn.btn-default(href="/settings/sites") Cancel
                |&nbsp;
                a.btn.btn-primary(href="/settings/sites/{{ site._id }}/edit") Edit
