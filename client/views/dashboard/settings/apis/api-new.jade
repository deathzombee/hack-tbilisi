div(ng-include="'views/dashboard/settings/shell.html'")

div(ng-include="'views/common/spinner.html'" ng-show="isLoading")
.container(ng-hide="isLoading")
    .row
        .col-md-12
            h2 Create New API Key
            include ./form.jade
    
    .row
        .col-md-12
            .pull-right
                a.btn.btn-default(href="/settings/api") Cancel
                | &nbsp;
                button.btn.btn-primary(ng-click="saveUser()", ng-disabled="userForm.$invalid || isSaving || !canEdit") Save
