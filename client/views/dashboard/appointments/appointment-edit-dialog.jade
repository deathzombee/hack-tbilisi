.modal-header
    h3.modal-title Edit appointment
.modal-body
    .container-fluid
        .row
            .col-md-12
                div(ng-include="'views/common/spinner.html'" ng-show="isLoading")
                div(ng-hide="isLoading")
                    ul.nav.nav-tabs(role="tablist")
                        li.active(role="presentation")
                            a(href="#settings" aria-controls="settings" role="tab" data-toggle="tab") Settings
                        li(role="presentation")
                            a(href="#automations" aria-controls="automations" role="tab" data-toggle="tab") Automations
                    div.tab-content
                        div.tab-pane.active(id="settings" role="tabpanel")
                            br
                            include ./form.jade
                        div.tab-pane(id="automations" role="tabpanel")
                            include ./formAutomations.jade
.modal-footer
    button.btn.btn-default(ng-click="cancel()") Cancel
    span &nbsp;
    button.btn.btn-primary(ng-click="save()", ng-disabled="appointmentForm.$invalid || isSaving || !canEdit") Save
