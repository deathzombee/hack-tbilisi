.modal-header
    h3.modal-title Create appointment
.modal-body
    .container-fluid
        .row
            .col-md-12
                div(ng-include="'views/common/spinner.html'" ng-show="isLoading")
                div(ng-hide="isLoading")
                    include ./form.jade
.modal-footer
    button.btn.btn-default(ng-click="cancel()") Cancel
    span &nbsp;
    button.btn.btn-primary(ng-click="save()", ng-disabled="appointmentForm.$invalid || isSaving || !canEdit") Save
