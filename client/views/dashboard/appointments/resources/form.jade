form.form-horizontal(name="resourceForm")
    .form-group(ng-class="{ 'has-error': resourceForm.name.$error.required }")
        label.col-md-3.control-label(for="name") Name*
        .col-md-9
            input.form-control(name="name" ng-model="resource.name" 
                               ng-required="true" placeholder="Name" ng-disabled="isSaving" autofocus)
    
    .form-group
         label.col-md-3.control-label(for="description") Description
         .col-md-9
             input.form-control(name="description" ng-model="resource.description" placeholder="Description" ng-disabled="isSaving")
    
    .form-group
         label.col-md-3.control-label(for="practitioner") Linked practitioner
         .col-md-9
             select.form-control(name="practitioner" ng-model="resource.practitioner" ng-disabled="isSaving" 
                                 ng-options="practitioner._id as practitioner.name for practitioner in practitioners")
                 option(value="") Not linked
    
    .form-group(ng-class="{ 'has-error': resourceForm.appointmentInterval.$error.required }")
        label.col-md-3.control-label(for="appointmentInterval") Appointment book interval (min)*
        .col-md-9
            input.form-control(name="appointmentInterval" ng-model="resource.appointmentInterval" 
                               ng-required="true" placeholder="Appointment book interval" ng-disabled="isSaving")
    
    .form-group
        label.col-md-3.control-label(for="reminderMessage") Reminder message*
        .col-md-9
            input.form-control(name="reminderMessage" ng-model="resource.reminderMessage" 
                               ng-required="true" placeholder="Default reminder message" ng-disabled="isSaving")
    
    .form-group
        label.col-md-3.control-label(for="remindBeforeStart") Time before start to remind (min)*
        .col-md-9
            input.form-control(name="remindBeforeStart" ng-model="resource.remindBeforeStart" 
                               ng-required="true" placeholder="Default time before start to remind" ng-disabled="isSaving")
    
    .form-group(ng-show="resource._id")
        label.col-md-3.control-label(for="status") Status
        .col-md-9
            select.form-control(name="status" ng-model="resource.status" ng-disabled="isSaving")
                option(value="active") Active
                option(value="inactive") InActive
