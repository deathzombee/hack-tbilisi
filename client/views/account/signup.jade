div(ng-include="'views/account/shell.html'")
.container
    .well
        form.form-horizontal(name="signupForm")
            fieldset
                legend Create your new account
                    .form-group
                        label.col-md-2.control-label(for="displayName") Your name*
                        .col-md-10
                            input.form-control(name="displayName", type="text", placeholder="Name", ng-model="displayName", ng-required="true")
                    .form-group
                        label.col-md-2.control-label(for="email") Email*
                        .col-md-10
                            input.form-control(name="email", type="email", placeholder="Email", ng-model="email", required)
                    .form-group
                        label.col-md-2.control-label(for="password") Password*
                        .col-md-10
                            input.form-control(name="password", type="password", placeholder="Password", ng-model="password", required)
                    .form-group
                        label.col-md-2.control-label(for="repeatPassword") Repeat password*
                        .col-md-10
                            input.form-control(name="repeatPassword", type="password", placeholder="Repeat password", ng-model="repeatPassword", required)
                    .form-group
                        label.col-md-2.control-label(for="siteName") First site name*
                        .col-md-10
                            input.form-control(name="siteName", type="text", placeholder="Site name", ng-model="siteName", required)
                    .form-group
                        .col-md-10.col-md-offset-2
                            .pull-right
                                button.btn.btn-primary(ng-click="signup()", ng-disabled="signupForm.$invalid") Submit
                                | &nbsp;
                                a.btn.btn-default(href="/") Cancel
